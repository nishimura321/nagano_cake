<div class="container mt-3">
  <div class="row">
    <div class="col-11 mx-auto">
      <h5><span class="bg-gray px-4">商品編集</span></h5>
    </div>
  </div><br>

  <div class="row">
    <div class="mx-auto col-9">
    <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
    <table class="table-borderless">
      <tbody>
        <tr>
          <td class="pr-5 pb-2">商品画像</td>
          <td class="pb-2"><%= f.file_field :image, accept: "image/*" %></td>
        </tr>

        <tr>
          <td class="pr-5 pb-2">商品名</td>
          <td class="pb-2"><%= f.text_field :name, class: "form-control" %></td>
        </tr>

        <tr>
          <td class="pr-5 pb-2">商品説明</td>
          <td class="pb-2"><%= f.text_area :introduction, class: "form-control" %></td>
        </tr>

        <tr>
          <td class="pr-5 pb-2">ジャンル</td>
          <td class="pb-2"><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name, f.object.genre_id), include_blank: "-- 選択してください --　　" %></td>
        </tr>

        <tr>
          <td class="pr-5 pb-2">税抜価格</td>
          <td class="pb-2"><%= f.text_field :price, class: "form-control" %></td>
          <td>円</td>
        </tr>

        <tr>
          <td class="pr-5 pb-2">販売ステータス</td>
          <td class="pb-2">
              <%= f.radio_button :is_sold, "true" %>
              <%= f.label :is_sold_true, "販売中", class: "mr-5" %>
              <%= f.radio_button :is_sold, "false" %>
              <%= f.label :is_sold_false, "販売停止中" %>
          </td>
        </tr>
      </tbody>
    </table>
    </div>
  </div><br>

  <div class="row justify-content-center">
    <%= f.submit "変更を保存", class: "btn btn-success px-4" %>
    <% end %>
  </div>
</div>
<br>