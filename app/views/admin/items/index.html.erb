<div class="container mt-3">
  <div class="row">
    <div class="col-6 mx-auto">
      <h5><span class="bg-gray px-4">商品一覧</span></h5>
    </div>
    <div class="col-2 mx-auto">
      <%= link_to "商品登録", new_admin_item_path, class: "btn btn-success px-4" %>
    </div>
  </div><br>

  <div class="row">
    <div class="mx-auto col-9">
    <table class="table border-bottom">
      <thead>
        <tr class="table-secondary">
          <th class="pb-2">商品ID</th>
          <th class="pb-2">商品名</th>
          <th class="pb-2">税抜価格</th>
          <th class="pb-2">ジャンル</th>
          <th></th>
          <th class="pb-2">ステータス</th>
        </tr>

    <% @items.each do |item| %>
      <tbody>
        <tr>
          <td class="pb-2"><%= item.id %></td>
          <td class="pb-2"><%= link_to item.name, admin_item_path(item.id) %></td>
          <td class="pb-2"><%= item.price.to_s(:delimited) %></td>
          <td class="pb-2"><%= item.genre.name %></td>
          <td></td>
          <td class="pb-2">
            <% if item.is_sold %>
              <p class="text-success"><strong>販売中</strong></p>
            <% else %>
              <p class="text-secondary"><strong>販売停止中</strong></p>
            <% end %>
          </td>
        </tr>
      </tbody>
    <% end %>
    </table>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto">
      <%= paginate @items %>
    </div>
  </div>
</div>