<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h5><span class="bg-gray pl-4 pr-4"><strong>商品一覧</strong></span></h5>
    </div>
  </div><br>

  <div class="row">
    <div class="mx-auto col-9">
    <table class="table">
      <thead>
        <tr class="table-secondary">
          <th class="pb-2">商品ID</th>
          <th class="pb-2">商品名</th>
          <th class="pb-2">税抜価格</th>
          <th class="pb-2">ジャンル</th>
          <th></th>
          <th class="pb-2">ステータス</th>
        </tr>

    <% @items.each do |item| %>
      <tbody>
        <tr>
          <td class="pb-2"><%= item.id %></td>
          <td class="pb-2"><%= link_to item.name, admin_item_path(item.id) %></td>
          <td class="pb-2"><%= item.price %></td>
          <td class="pb-2"><%= item.genre.name %></td>
          <td></td>
          <td class="pb-2">
            <% if item.is_sold %>
              <p class="text-success"><strong>販売中</strong></p>
            <% else %>
              <p class="text-secondary"><strong>販売停止中</strong></p>
            <% end %>
          </td>
        </tr>
      </tbody>
    <% end %>
    </table>
    <%= paginate @items %>
    </div>
  </div>
</div>