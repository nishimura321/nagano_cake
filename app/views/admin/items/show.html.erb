<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h5><span class="bg-gray pl-4 pr-4"><strong>商品詳細</strong></span></h5>
    </div>
  </div><br>

  <div class="row">
    <% @item.each do |item| %>
    <%= image_tag item.image, size: "300x200" %>

    <table>
      <tbody>
        <tr>
          <td>商品名</td>
          <td><%= item.name %></td>
         </tr>

         <tr>
           <td>商品説明</td>
           <td><%= item.introduction %></td>
         </tr>

         <tr>
           <td>ジャンル</td>
           <td><%= item.genre.name %></td>
         </tr>

         <tr>
           <td>税込価格<br>(税抜価格)</td>
           <td><%= item.price %></td>
         </tr>

         <tr>
           <td>販売ステータス</td>
           <td><%= item.is_sold %></td>
         </tr>
      <tbody>
    <table>

  <div class="row justify-content-center">
    <%= f.submit "編集する", class: "btn btn-success pl-4 pr-4" %>
    <% end %>
  </div>
</div>
<br>