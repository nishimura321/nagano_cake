<div class="container mt-3">

  <div class="row">
    <div class="col-12">
      <h5><span class="bg-gray px-4">商品詳細</span></h5>
    </div>
  </div><br>

  <div class="row">
    <div class="col-4">
    <%= image_tag @item.get_image(300, 200) %>
    </div>

    <div class="col-6">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td scope="col" style="width: 30%">商品名</td>
          <td scope="col" style="width: 700%"><%= @item.name %></td>
         </tr>

         <tr>
           <td scope="col" style="width: 30%">商品説明</td>
           <td scope="col" style="width: 70%"><%= @item.introduction %></td>
         </tr>

         <tr>
           <td scope="col" style="width: 30%">ジャンル</td>
           <td scope="col" style="width: 70%"><%= @item.genre.name %></td>
         </tr>

          <tr>
            <td scope="col" style="width: 30%">税込価格<br>(税抜価格)</td>
            <td class="align-middle" scope="col" style="width: 70%"><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
          </tr>

          <tr>
            <td scope="col" style="width: 30%">販売ステータス</td>
            <td scope="col" style="width: 70%">
              <% if @item.is_sold %>
              <p class="text-success"><strong>販売中</strong></p>
              <% else %>
              <p class="text-secondary"><strong>販売停止中</strong></p>
              <% end %>
            </td>
          </tr>
      </tbody>
    </table>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto">
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success px-4 py-2" %>
    </div>
  </div>
</div>
<br><br><br>