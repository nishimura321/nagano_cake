<div class="container mt-3">

  <div class="row">
    <div class="col-12">
      <h5><span class="bg-gray px-4"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</span></h5>
    </div>
  </div><br>

  <div class="row">
    <div class="col-12">
          <table class="table table-borderless">
      <tbody>
        <tr>
          <td scope="col" style="width: 20%">会員ID</td>
          <td scope="col" style="width: 80%"><%= @customer.id %></td>
         </tr>

         <tr>
           <td scope="col" style="width: 20%">氏名</td>
           <td scope="col" style="width: 80%"><%= @customer.last_name %>　<%= @customer.first_name %></td>
         </tr>

         <tr>
           <td scope="col" style="width: 20%">フリガナ</td>
           <td scope="col" style="width: 80%"><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
         </tr>

          <tr>
            <td scope="col" style="width: 20%">郵便番号</td>
            <td scope="col" style="width: 80%"><%= @customer.postal_code %></td>
          </tr>

          <tr>
            <td scope="col" style="width: 20%">住所</td>
            <td scope="col" style="width: 80%"><%= @customer.address %></td>
          </tr>

          <tr>
            <td scope="col" style="width: 20%">電話番号</td>
            <td scope="col" style="width: 80%"><%= @customer.telephone_number %></td>
          </tr>

          <tr>
            <td scope="col" style="width: 20%">メールアドレス</td>
            <td scope="col" style="width: 80%"><%= @customer.email %></td>
          </tr>

          <tr>
            <td scope="col" style="width: 20%">会員ステータス</td>
            <td scope="col" style="width: 80%">
              <% if @customer.is_active %>
              <p class="text-success"><strong>有効</strong></p>
              <% else %>
              <p class="text-secondary"><strong>退会</strong></p>
              <% end %>
            </td>
          </tr>

          <tr>
            <td scope="col" style="width: 20%"></td>
            <td scope="col" style="width: 80%">
              <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success px-4 py-2 mr-5" %>
              <%= link_to "注文履歴一覧を見る", admin_path, class: "btn btn-primary px-4 py-2 ml-5" %>
            </td>
          </tr>

      </tbody>
    </table>
    </div>
  </div>
</div><br><br>