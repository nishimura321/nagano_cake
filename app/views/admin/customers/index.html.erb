<div class="container mt-3">
  <div class="row">
    <div class="col-10 mx-auto">
      <h5><span class="bg-gray px-4">会員一覧</span></h5>
    </div>
  </div><br>

  <div class="row">
    <div class="mx-auto col-9">
    <table class="table border-bottom">
      <thead>
        <tr class="table-secondary">
          <th class="pb-2">会員ID</th>
          <th class="pb-2">氏名</th>
          <th class="pb-2">メールアドレス</th>
          <th class="pb-2">ステータス</th>
        </tr>

    <% @customers.each do |customer| %>
      <tbody>
        <tr>
          <td class="pb-2"><%= customer.id %></td>
          <td class="pb-2"><%= link_to "#{customer.last_name}#{customer.first_name}", admin_customer_path(customer.id) %></td>
          <td class="pb-2"><%= customer.email %></td>
          <td class="pb-2">
            <% if customer.is_active %>
              <p class="text-success"><strong>有効</strong></p>
            <% else %>
              <p class="text-secondary"><strong>退会</strong></p>
            <% end %>
          </td>
        </tr>
      </tbody>
    <% end %>
    </table>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto">
      <%= paginate @customers %>
    </div>
  </div>
</div>