<div class="container mt-3">
  <div class="row mb-5">
    <div class="mx-auto col-11">
      <h5 class="ml-5"><span class="bg-gray px-4">ジャンル一覧・追加</span></h5>
    <div>
  </div>
  <br><br>
  <div class="row mb-5">
    <div class="col-12">
    <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <span class="fs-13 mr-5"><strong>ジャンル名</strong></span>
      <%= f.text_field :name, placeholder: "ジャンル名", class: "mr-5" %>
      <%= f.submit '新規登録', class: "btn btn-success px-4" %>
    <% end %>
    <div>
  <div>
  <br><br>
  <div class="row">
    <div class="col-5">
    <table class="table border-bottom">
      <thead class="table-secondary">
      <tr>
        <th class="pl-5">ジャンル</th>
        <td></td>
      </tr>
      </thead>

      <% @genres.each do |genre| %>
      <tbody>
      <tr>
        <td class="pr-5"><span><%= genre.name %></span></td>
        <td class="pl-5"><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success px-4" %></td>
      </tr>
      </tbody>
      <% end%>
    </table>
    </div>
  </div>

</div>