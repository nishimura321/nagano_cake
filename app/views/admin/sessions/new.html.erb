<div class="container">
  <div class="row">
    <div class="mx-auto col-11">
      <h5><span class="bg-gray">　管理者ログイン　</span></h5><br>
      
      <div class="text-center">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス　　　　 %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "pr-5" %>
        </div>
        
        <div class="field">
          <%= f.label :パスワード　　　　　　 %>
          <%= f.password_field :password, autocomplete: "current-password", class: "pr-5" %>
        </div><br>
        
        <div class="actions">
          <%= f.submit "　　ログイン　　", class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
      
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>