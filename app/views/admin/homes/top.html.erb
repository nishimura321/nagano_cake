<div class="container mt-3">
  <div class="row">
    <div class="col-10 mx-auto">
      <h5><span class="bg-gray px-4">注文履歴一覧</span></h5>
    </div>
  </div><br>

  <div class="row">
    <div class="mx-auto col-9">
    <table class="table border-bottom">
      <thead>
        <tr class="table-secondary">
          <th class="pb-2">購入日時</th>
          <th class="pb-2">購入者</th>
          <th class="pb-2">注文個数</th>
        </tr>

    <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td class="pb-2"><%= link_to order.created_at.strftime('%Y/%m/%d/%T'), admin_order_path(order.id) %></td>
          <td class="pb-2"><%= order.customer.last_name %><%= order.customer.first_name %></td>
          <td class="pb-2"><%= OrderDetail.total_amount(order.id) %></td>
        </tr>
      </tbody>
    <% end %>
    </table>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto">
      <%= paginate @orders %>
    </div>
  </div>
</div>