<div class="container mt-3">
  <div class="row">
    <div class="mx-auto col-11">
      <h5><span class="bg-gray pl-4 pr-4">ログイン</span></h5><br>
      <h5 class="ml-4 mb-3"><span class="bg-gray pl-4 pr-4">会員の方はこちらからログイン</span></h5>
    </div>
  </div>

    <div class="row">
      <table class="table table-borderless col-8 ml-5">
        <tbody>
        <%= form_with model: @customer, url: customer_session_path do |f| %>
        <tr>
        <div class="field">
        <td></td>
        <td></td>
        <td><%= f.label :メールアドレス%></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %></td>
        </div>
        </tr>

        <tr>
        <div class="field">
          <td></td>
         <td></td>
         <td><%= f.label :パスワード%></td>
         <td><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></td>
         </div>
         </tr>

        <tr>
        <div class="actions">
        <td></td>
        <td></td>
        <td></td>
        <td class="pt-4"><%= f.submit "ログイン", class: "btn btn-primary pl-5 pr-5" %></td>
        </div>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div><br><br>

  <div class="row">
    <div class="mx-auto col-8 mb-3">
    <h5><span class="bg-gray pl-4 pr-4">会員登録がお済みでない方</span></h5>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto col-7">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
<br><br><br><br><br><br>
