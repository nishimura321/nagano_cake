<div class="container mt-3">
  <div class="row">
    <div class="col-11 mx-auto">
      <h5><span class="bg-gray px-4">注文履歴一覧</span></h5>
    </div>
  </div><br>

  <div class="row">
    <div class="mx-auto col-12">
    <table class="table border border-black">
      <thead>
        <tr class="table-secondary">
          <th class="pb-2 table-secondary" >注文日</th>
          <th class="pb-2 table-secondary" >配送先</th>
          <th class="pb-2 table-secondary" >注文商品</th>
          <th class="pb-2 table-secondary" >支払金額</th>
          <th class="pb-2 table-secondary" >注文詳細</th>
        </tr>

      <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td class="pb-2 align-middle">
            <%= order.created_at.strftime('%Y/%m/%d') %>
          </td>
          <td class="pb-2 align-middle">〒<%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td class="pb-2 align-middle">
            <% order.order_detail.each do |order_detail| %>
            <%= order_detail.item.name %><br>
            <% end %>
          </td>
          <td class="pb-2 align-middle"><%= order.total_payment.to_s(:delimited) %>円</td>
          <td class="pb-2 align-middle"><%= link_to "表示する", order_path(order.id), class: "btn btn-primary px-4" %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
    </div>
  </div>
  <br><br><br><br><br><br>
</div>