<div class="container mt-3">
  <div class="row">
    <div class="col-8 mx-auto">
      <h5><span class="bg-gray px-4">注文履歴一覧</span></h5>
    </div>
  </div><br>

  <div class="row">
    <div class="mx-auto col-12">
    <table class="table border border-black">
      <thead>
        <tr class="table-secondary">
          <th class="pb-2" >注文日</th>
          <th class="pb-2" >配送先</th>
          <th class="pb-2" >注文商品</th>
          <th class="pb-2" >支払金額</th>
          <th class="pb-2" >注文詳細</th>
        </tr>

      <% @cart_items.each do |cart_item| %>
      <tbody>
        <tr>
          <td class="pb-2" scope="col" style="width: 40%">
            <%= image_tag cart_item.item.get_image(100, 50) %>　<%= cart_item.item.name %>
          </td>
          <td class="pb-2" scope="col" style="width: 15%"><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
          <td class="pb-2" scope="col" style="width: 15%">
            <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
            <%= f.select :amount, *[1..10] %>
            <%= f.submit "変更", class: "btn btn-success" %>
            <% end %>
          </td>
          <td class="pb-2" scope="col" style="width: 15%"><%= cart_item.subtotal.to_s(:delimited) %></td>
          <td class="pb-2" scope="col" style="width: 15%">
            <%= link_to "表示する", order_path(order.id), class: "btn btn-primary px-4" %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
    </div>
  </div>
  <br><br><br><br><br><br>
</div>