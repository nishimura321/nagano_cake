<div class="container mt-3">
  <div class="row">
    <div class="col-11 mb-3">
      <h5><span class="bg-gray px-4">配送先登録 / 一覧</span></h5>
    </div>
  </div>

  <div class="row">
    <div class="col-11">
    <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
    <%= f.hidden_field :customer_id, value: current_customer.id %>
      <table class="table-borderless">
        <tbody>
          <tr>
            <div class="field">
            <td class="pb-2 pr-5">郵便番号(ハイフンなし)</td>
            <td class="pb-2"><%= f.text_field :postal_code, placeholder: "0000000", class: "form-control" %></td>
            </div>
          </tr>
          <tr>
            <div class="field">
            <td class="pb-2 pr-5">住所</td>
            <td colspan="5" class="pb-2"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %></td>
            </div>
          </tr>
          <tr>
            <div class="field">
            <td class="pb-2 pr-5">宛名</td>
            <td class="pb-2"><%= f.text_field :name, placeholder: "令和道子", class: "form-control" %></td>
            <td class="px-5"></td>
            <td class="pl-5"><%= f.submit "新規登録", class: "btn btn-success px-4" %></td>
            </div>
          </tr>
        </tbody>
      </table>
    <% end %>
    </div>
  </div><br><br>

  <div class="row">
    <div class="col-11">
    <table class="table border border-black">
      <thead>
        <tr>
          <th class="table-secondary">郵便番号</th>
          <th class="table-secondary">住所</th>
          <th class="table-secondary">宛名</th>
          <th class="table-secondary"></th>
        </tr>
      </thead>
    <% @addresses.each do |address| %>
      <tbody>
      <tr>
        <td class="align-middle"><%= address.postal_code %></td>
        <td class="align-middle"><%= address.address %></td>
        <td class="align-middle"><%= address.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
          <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger ml-1" %>
        </td>
      </tr>
      </tbody>
    <% end %>
    </table>
    </div>
  </div><br><br><br><br>
</div>