<div class="container mt-3">
  <div class="row">
    <div class="col-11 mb-3">
      <h5><span class="bg-gray px-4">配送先編集</span></h5>
    </div>
  </div>

  <div class="row">
    <div class="col-11">
    <%= form_with model: @address, url: address_path, method: :patch do |f| %>
    <%= f.hidden_field :customer_id, value: current_customer.id %>
      <table class="table-borderless">
        <tbody>
          <tr>
            <div class="field">
            <td class="pb-2 pr-5">郵便番号(ハイフンなし)</td>
            <td class="pb-2"><%= f.text_field :postal_code, class: "form-control" %></td>
            </div>
          </tr>
          <tr>
            <div class="field">
            <td class="pb-2 pr-5">住所</td>
            <td colspan="5" class="pb-2"><%= f.text_field :address, class: "form-control" %></td>
            </div>
          </tr>
          <tr>
            <div class="field">
            <td class="pb-2 pr-5">宛名</td>
            <td class="pb-2"><%= f.text_field :name, class: "form-control" %></td>
            <td class="px-5"></td>
            <td class="pl-5"><%= f.submit "変更内容を保存", class: "btn btn-success px-4" %></td>
            </div>
          </tr>
        </tbody>
      </table>
    <% end %>
    </div>
  </div><br><br>
</div>