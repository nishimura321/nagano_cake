<div class="container">
  <div class="row">
    <div class="mx-auto col-11">
      <h5><span class="bg-gray">　新規会員登録　</span></h5>
      <br>
      <%= form_with model: @coustmer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <table class="table-borderless">
          <tbody>
          <tr>
            <div class="field">
            <td><%= f.label :"名前" %></td>
            <td><%= f.label :"　(姓)" %></td>
            <td><%= f.text_field :last_name, autofocus: true, autocomplete: "name", placeholder: "令和", class: "form-control" %></td>
            <td><%= f.label :"　　(名)" %></td>
            <td><%= f.text_field :first_name, autofocus: true, autocomplete: "name", placeholder: "道子", class: "form-control" %></td>
            </div>
          </tr>

          <tr>
            <div class="field">
            <td><%= f.label :"フリガナ" %></td>
            <td><%= f.label :"　(セイ)" %></td>
            <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "name", placeholder: "レイワ", class: "form-control" %></td>
            <td><%= f.label :"　　(メイ)" %></td>
            <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "name", placeholder: "ミチコ", class: "form-control" %></td>
            </div>
          </tr>

          <tr>
            <div class="field">
            <td><%= f.label :メールアドレス%></td>
            <td></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %></td>
            </div>
          </tr>

          <tr>
            <div class="field">
            <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
            <td></td>
            <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code", placeholder: "0000000", class: "form-control" %></td>
            </div>
          </tr>

          <tr>
            <div class="field">
            <td><%= f.label :住所%></td>
            <td></td>
            <td colspan="4"><%= f.text_field :address, autofocus: true, autocomplete: "address-line1", placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %></td>
            </div>
          </tr>

          <tr>
            <div class="field">
            <td><%= f.label :"電話番号(ハイフンなし)" %></td>
            <td></td>
            <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "tel", placeholder: "0000000000", class: "form-control" %></td>
            </div>
          </tr>

          <tr>
            <div class="field">
            <td><%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
            <% end %></td>
            <td></td>
            <td><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></td>
            </div>
          </tr>

          <tr>
            <div class="field">
            <td><%= f.label :"パスワード(確認用)" %></td>
            <td></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></td>
            </div>
          </tr>
          </tbody>
        </table>

        <br>
        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success pl-5 pr-5" %>
        </div>
      <% end %>
      <br>
      <h5><span class="bg-gray">　既に登録済みの方　</span></h5>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
