<div class="container">
  <div class="row">
    <div class="mx-auto col-11">
      <h5><span class="bg-gray">　新規会員登録　</span></h5>
      <br>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :"名前　　　　　　　　　　(姓)　" %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "name" %>

          <%= f.label :"　　(名)　" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.label :"フリガナ　　　　　　　　(セイ)" %>
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "name" %>

          <%= f.label :"　　(メイ)" %>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス　　　　　　　　 %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :"郵便番号(ハイフンなし)　　　　 " %>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code" %>
        </div>

        <div class="field">
          <%= f.label :住所　　　　　　　　　　　　　%>
          <%= f.text_field :address, autofocus: true, autocomplete: "address-line1" %>
        </div>

        <div class="field">
          <%= f.label :"電話番号(ハイフンなし)　　　　" %>
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "tel" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)　　　　</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード(確認用)　　　　　　" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success pl-5 pr-5" %>
        </div>
      <% end %>
      <br>
      <h5><span class="bg-gray">　既に登録済みの方　</span></h5>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
