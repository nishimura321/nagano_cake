<div class="container">
  <div class="row">
    <div class="mx-auto col-11">
      <h5><span class="bg-gray">　会員情報編集　</span></h5>
      <br>
      <%= form_with model: @coustmer, url: customers_information_edit_path(current_customer), method: :patch do |f| %>

        <table class="table-borderless">
          <tbody>
          <tr>
            <div class="field">
            <td><%= f.label :"名前" %></td>
            <td><%= f.label :"　(姓)" %></td>
            <td><%= f.text_field :last_name, class: "form-control" %></td>
            <td><%= f.label :"　　(名)" %></td>
            <td><%= f.text_field :first_name, class: "form-control" %></td>
            </div>
          </tr>

          <tr>
            <div class="field">
            <td><%= f.label :"フリガナ" %></td>
            <td><%= f.label :"　(セイ)" %></td>
            <td><%= f.text_field :last_name_kana, class: "form-control" %></td>
            <td><%= f.label :"　　(メイ)" %></td>
            <td><%= f.text_field :first_name_kana, class: "form-control" %></td>
            </div>
          </tr>

          <tr>
            <div class="field">
            <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
            <td></td>
            <td><%= f.text_field :postal_code, class: "form-control" %></td>
            </div>
          </tr>

          <tr>
            <div class="field">
            <td><%= f.label :住所%></td>
            <td></td>
            <td colspan="4"><%= f.text_field :address, class: "form-control" %></td>
            </div>
          </tr>

          <tr>
            <div class="field">
            <td><%= f.label :"電話番号(ハイフンなし)" %></td>
            <td></td>
            <td><%= f.text_field :telephone_number, class: "form-control" %></td>
            </div>
          </tr>

          <tr>
            <div class="field">
            <td><%= f.label :メールアドレス%></td>
            <td></td>
            <td><%= f.email_field :email, class: "form-control" %></td>
            </div>
          </tr>

          <tr>
            <div class="actions">
            <td></td>
            <td></td>
            <td><%= f.submit "編集内容を保存", class: "btn btn-success pl-5 pr-5" %></td>
            <td></td>
            <td><%= f.submit "退会する", class: "btn btn-danger pl-5 pr-5" %></td>
            </div>
          </tr>

          </tbody>
        </table>
      <% end %>
        <br>

      <br>
    </div>
  </div>
</div>
