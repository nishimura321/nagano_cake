<div class="container mt-3">
  <div class="row">
    <div class="col-6 mx-auto">
      <h5><span class="bg-gray px-4">ショッピングカート</span></h5>
    </div>
    <div class="col-2 mx-auto">
      <%= link_to "カートを空にする", cart_item_path, method: :delete, "data-confirm" => "本当に空にしますか？", class: "btn btn-danger px-4" %>
    </div>
  </div><br>

  <div class="row">
    <div class="mx-auto col-9">
    <table class="table border">
      <thead>
        <tr class="table-secondary">
          <th class="pb-2">商品名</th>
          <th class="pb-2">単価(税込)</th>
          <th class="pb-2">数量</th>
          <th class="pb-2">小計</th>
          <th><%= link_to "削除する", cart_item_path, method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger px-4" %></th>
        </tr>

    <% @cart_items.each do |cart_item| %>
      <tbody>
        <tr>
          <td class="pb-2">
            <% @items.each do |item| %>
            <%= image_tag item.image, size: "150x50" %>
            <% end %><%= cart_item.name %></td>
          <td class="pb-2"><%= cart_item.item.add_tax_price%></td>
          <td class="pb-2"><%= cart_item.amount %></td>
          <td class="pb-2"><%= cart_item.subtotal%></td>
          <td class="pb-2"><%=  %></td>
        </tr>
      </tbody>
    <% end %>
    </table>
    </div>
  </div>

  <div class="row">
    <%= link_to "買い物を続ける", root_path(anchor: 'new_item'), class: "btn btn-primary px-4" %>
    <table class="table">
      <thead>
        <tr>
          <th></th>
        </tr>
      <tbody>
        <tr>
          <td></td>
        </tr>
      </tbody>
    </table>
  </div>

</div>